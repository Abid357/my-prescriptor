<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0285ff"

    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/text_slide1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"


        android:layout_marginBottom="20dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="42dp"
        android:text="@string/get_started"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="172dp"
        android:layout_height="0dp"
        android:layout_marginBottom="49dp"
        app:layout_constraintBottom_toTopOf="@+id/parentlayout_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_slide1"
        app:srcCompat="@drawable/app_icon" />

    <LinearLayout
        android:id="@+id/parentlayout_login"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginBottom="176dp"
        android:layout_marginEnd="42dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/parentlayout_signup"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <LinearLayout
            android:id="@+id/layout_login"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginBottom="22dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/layout_signup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4">

            <ImageView
                android:id="@+id/icon_login"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:scaleX="0.7"
                android:scaleY="0.7"
                app:srcCompat="@drawable/user_icon"

                />

            <TextView
                android:id="@+id/text_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:text="LOG IN"
                android:textSize="15sp"
                android:textStyle="bold"

                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/parentlayout_signup"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="42dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/parentlayout_login"
        app:layout_constraintEnd_toStartOf="@+id/parentlayout_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/parentlayout_login">

        <LinearLayout
            android:id="@+id/layout_signup"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="horizontal"

            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="429dp">


            <ImageView
                android:id="@+id/icon_signup"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:scaleX="0.7"
                android:scaleY="0.7"
                app:srcCompat="@drawable/user_icon" />

            <TextView
                android:id="@+id/text_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:text="SIGN UP"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
